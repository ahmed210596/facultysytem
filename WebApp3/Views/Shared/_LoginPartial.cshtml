@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item mx-0 mx-lg-1">
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class="nav-link py-3 px-0 px-lg-3 rounded" })
        </li>
        <li class="nav-item mx-0 mx-lg-1"><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link py-3 px-0 px-lg-3 rounded">Se déconnecter</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item mx-0 mx-lg-1">@Html.ActionLink("S'inscrire", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink",@class="nav-link py-3 px-0 px-lg-3 rounded" })</li>
        <li class="nav-item mx-0 mx-lg-1">@Html.ActionLink("Se connecter", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" ,@class="nav-link py-3 px-0 px-lg-3 rounded"})</li>
    </ul>
}
